<div style="background-color:gray;">
  <%=  simple_form_for [@board, @task], html: { class: 'form-horizontal' } do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <%= f.input :card_id %>

      <%= f.input :completed %>

      <%= f.input :name %>


      <%= f.input :notes %>


      <%= f.input :task_type, :collection => ['Call', 'Email', 'To-do'] %>

Due date:
 <%= f.input :due_date, as: :datetime_picker, :label => 'Date field' %>

Email reminder:
 <%= f.input :email_reminder, as: :datetime_picker, :label => 'Date field' %>

    <div class="actions">
        <%= f.button :submit %>
    </div>
  <% end %>
</div>

