<article class="timeline-entry<% if params[:action] == "create" %> animated fadeInDown<% end %>" id="task_<%= task.id %>">

  <div class="timeline-entry-inner">


      <% if task.task_type == 'call' %>
      <% text_var = 'Had a' %>
      <div class="timeline-icon bg-primary">
      <i class="fa fa-mobile"></i>
      <% elsif task.task_type == 'email' %>
      <% text_var = 'Logged an' %>
      <div class="timeline-icon bg-secondary">
      <i class="fa fa-envelope-o"></i>
      <% elsif task.task_type == 'interview' %>
      <% text_var = 'Had an' %>
      <div class="timeline-icon bg-success">
      <i class="fa fa-handshake-o"></i>
      <% elsif task.task_type == 'task' %>
      <% text_var = 'Added a' %>
      <div class="timeline-icon bg-success">
			<i class="fa fa-thumb-tack"></i> 
      <% else %>
      <% text_var = 'Added a' %>
      <div class="timeline-icon bg-info">
      <i class="fa fa-sticky-note-o"></i>
      <% end %>
    </div>

    <div class="timeline-label">
      <!-- note, call, email, meeting -->
				<h6><%= text_var %> <strong><%= task.task_type %></strong> <i> <%= task.subline %></i>
          <%= link_to '', task_url(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, :remote => true, :class => 'delete_note fa fa-trash-o black' %></h6>
        <small><span><%= time_ago_in_words(task.created_at) %> ago</span></small>
				<p><%= task.notes %></p>
    </div>
  </div>

</article>